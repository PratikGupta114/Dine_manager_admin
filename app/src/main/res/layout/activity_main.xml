<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <!-- Main Screen Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- Toolbar Layout-->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/toolbar1"
            android:elevation="5dp"
            android:gravity="center|start"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dine Manager ( Admin )"
                android:fontFamily="@font/clan_book_webfont"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                />

        </androidx.appcompat.widget.Toolbar>

        <!-- Add new User Layout-->
        <LinearLayout
            android:id="@+id/layout1_addNewUser"
            android:layout_below="@id/toolbar1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ripple_light_background_rounded_corners"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/add_new_user_image"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New User"
                android:fontFamily="@font/varela_round_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Remove User Layout-->
        <LinearLayout
            android:id="@+id/layout1_removeUser"
            android:layout_below="@id/toolbar1"
            android:layout_toEndOf="@id/layout1_addNewUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ripple_light_background_rounded_corners"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/remove_user2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove existing User"
                android:textAlignment="center"
                android:fontFamily="@font/varela_round_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- View User Details Layout-->
        <LinearLayout
            android:id="@+id/layout1_viewUserDetails"
            android:layout_below="@id/layout1_addNewUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ripple_light_background_rounded_corners"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_information2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="View User Details"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:fontFamily="@font/varela_round_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- View User Details Layout-->
        <LinearLayout
            android:id="@+id/layout1_monitorUserData"
            android:layout_below="@id/layout1_addNewUser"
            android:layout_toEndOf="@id/layout1_viewUserDetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ripple_light_background_rounded_corners"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/users_data"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Monitor User's Data "
                android:textAlignment="center"
                android:fontFamily="@font/varela_round_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Reports and Complaints Layout-->
        <LinearLayout
            android:id="@+id/layout1_reportsAndComplaints"
            android:layout_below="@id/layout1_viewUserDetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/ripple_light_background_rounded_corners"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/reports_and_complaints"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports and Complaints"
                android:textAlignment="center"
                android:fontFamily="@font/varela_round_regular"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1_floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/add_user_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="40dp"
            android:elevation="20dp"
            app:fabCustomSize="75dp"
            />



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/drawer_menu"
        app:itemTextAppearance="@style/TextView_style"
        app:itemIconTint="#575656"
        />

</androidx.drawerlayout.widget.DrawerLayout>
